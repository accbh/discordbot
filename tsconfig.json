{
  "compilerOptions": {
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["es7", "DOM"],
      "module": "commonjs",
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "outDir": "dist",
      "preserveConstEnums": true,
      "sourceMap": true,
      "target": "es6",
      "typeRoots": [
          "types",
          "node_modules/@types"
      ],
      "experimentalDecorators": true
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "dist",
      "node_modules",
      "test"
  ]
}
